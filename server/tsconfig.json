{
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "nodenext",
    "target": "ES2023",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "allowJs": false
  },
  "include": ["src/**/*", "src/data/**/*.json", "prisma/**/*"],
  "exclude": ["node_modules"]
}
